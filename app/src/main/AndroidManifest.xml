<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.dal.group5.jukefit">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.sensor.stepcounter" />
    <uses-feature android:name="android.hardware.sensor.stepdetector" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/jflogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jflogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="JukeFit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddSongsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Group_Playlist" />
        <activity
            android:name=".PlaylistAndWorkoutActivity"
            android:label="My Gang" />
        <activity
            android:name=".MainActivity"
            android:label="Groups" />
    </application>

</manifest>