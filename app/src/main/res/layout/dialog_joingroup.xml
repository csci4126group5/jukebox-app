<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ca.dal.group5.jukefit.MainActivity">

    <EditText
        android:id="@+id/groupNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.41"
        android:ems="10"
        android:hint="Enter Group Nickname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/groupCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_weight="0.41"
        android:ems="10"
        android:hint="Enter Group Code"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/groupNickname" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_weight="0.41"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/groupNickname" />

</LinearLayout>

